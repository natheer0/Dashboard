@model DamagedProducts
@{
	ViewData["Title"] = "Damaged Products ";
}


<div class="container">
	<div class="row">
		<div class="col text-center mt-1">
			<h1 class="display-4 "><span class="badge bg-light bordred text-dark"> قائمة المنتجات التالفة</span> </h1>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<button class="btn btn-danger" onclick="newproductsDamaged()"> <i class="fs-4 bi-cart-plus p-2"></i> أضافة
				 منتج تالف </button>
		</div>
	</div>
</div>


<div class="row mt-4 text-center" dir="rtl">
	<div class="col">
		<div class="card">
			<div class="card-body">
				<table class="table table-bordered text-center">
					<thead>
						<tr class="bg-danger text-white">
							<th>#</th>
							<th>اسم المنتج</th>
							<th>كمية المنتج</th>
							<th>لون المنتج</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in ViewBag.DamagedProducts)
						{
							<tr>
								<td>@item.id</td>
								<td>@item.name</td>
								<td>@item.qty </td>
								<td>@item.color</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div class="modal" tabindex="-1" id="newproductsDamaged">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <h5 class="modal-title"> إضافة منتج تالف </h5>
            </div>
            <div class="modal-body">
            	<form asp-action="CreateDamaged" method="post" dir="rtl">
						<div class="row">
							<div class="col-sm-6">
								<label class="form-label">اختر المنتج</label>
								<select class="form-control" id="p" asp-for="ProductId">
									@foreach (var item in ViewBag.Products)
									{
										<option value="@item.Id">@item.Name</option>
									}
								</select>
							</div>
							<div class="col-sm-6">
								<label class="form-label">الكمية</label>
								<input type="text" class="form-control" asp-for="Qty" />
							</div>
						</div>
						<div class="row mt-3 text-center">
							<div class="col">
								<button type="submit" class="btn btn-danger">حفظ</button>
							</div>
						</div>
					</form>
            </div>
        </div>
    </div>
</div>
<script>
	function newproductsDamaged() {
		$('#newproductsDamaged').modal('show');
	}
</script>